<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  <title>Cooperflora - Cadastro de Usuário</title>

  <style>
    body {
      background-color: #FFFCCC;
    }

    .navbar{
      background-color: #016F24;
    }

    .navbar .navbar-brand {
      color: #D4E8C9;
    }

    /*Alterar a cor dos links do navbar para branco*/
    .navbar .navbar-nav .nav-item .nav-link {
      color: #fff;
    }
  </style>

</head>

<body>
  <!-- CONTAINER PRINCIPAL -->
  <div class="container-fluid px-0">
    <header>
      <!-- BARRA DE NAVEGACAO SUPERIOR DARK/FIXA/SOMBREADA -->
      <nav class="navbar navbar-expand-lg navbar-text navbar-dark fixed-top shadow-lg">
        <a class="navbar-brand">
          <h1>Cestas Cooperflora</h1>
          <!-- <img src="assets/img/??.png" class="img-fluid" alt="Logo">  VAI COLOCAR ICONE ? -->
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado"
          aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- MENU DE EXPANSAO -->
        <div class="collapse navbar-collapse" id="conteudoNavbarSuportado">

          <ul class="navbar-nav ml-auto">

            <li class="nav-item">
              <a class="nav-link" href="entregas">
                <i class="fas fa-home"></i> Home
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="entregas">
                <i class="fas fa-heart"></i> Entregas
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="usuario">
                <i class="fas fa-envelope"></i> Usuários
                <!-- IDEA: ARMAZENAR DADOS NA FORMA DE JSON NO FIREBASE
                    RealTime Database: Grava como uma arvore JSON
                    Cloud Firestone: modelo orientado a documentos NoSql -->
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fas fa-users"></i> Sobre
              </a>
            </li>

          </ul>
        </div><!-- fim do menu expansao -->
      </nav> <!-- fim da barra de navegacao -->
    </header>

    <section>
      <!-- Como a variável erros é um vetor, caso exista retorno estamos iterando sob ela e trazendo os erros para a tela-->
      <% if(erros) {%>
        <ul>
          <% for(let i=0; i< erros.length; i++) { %>
            <li>
              <%= erros[i].msg %>
            </li>
            <% } %>
        </ul>
        <% } %>
    </section>

    <div class="container mt-5 pt-5">
      <form action="/usuario/salvar" method="post">
        <div class="mb-3">
          <label for="nome" class="form-label">Nome</label>
          <input type="nome" class="form-control" name="nome" value="<%= usuario.nome %>">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" name="email" value="<%= usuario.email %>">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="telefone" class="form-label">Telefone</label>
          <input type="tel" class="form-control" name="telefone" value="<%= usuario.telefone %>">
        </div>

        <!-- TODO: funcionar checkbox -->
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="consumidor">
          <label class="form-check-label" for="consumidor">Consumidor</label>
        </div>
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="organizador">
          <label class="form-check-label" for="organizador">Organizador</label>
        </div>
        <button type="submit" class="btn btn-primary">Adicionar Usuário</button>
      </form>
    </div>
  </div> <!-- FINAL CONTAINER PRINCIPAL -->


  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
