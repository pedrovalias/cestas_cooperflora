<!doctype html>
<html lang="pt-br">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  <title>Cooperflora - Cadastro de Entregas</title>

  <style>
    body {
      background-color: #FFFCCC;
    }

    .navbar{
      background-color: #016F24;
    }

    .navbar .navbar-brand {
      color: #D4E8C9;
    }

    /*Alterar a cor dos links do navbar para branco*/
    .navbar .navbar-nav .nav-item .nav-link {
      color: #fff;
    }
  </style>
  
</head>

<body>
  <!-- CONTAINER PRINCIPAL -->
  <div class="container-fluid px-0">
    <header>
      <!-- BARRA DE NAVEGACAO SUPERIOR DARK/FIXA/SOMBREADA -->
      <nav class="navbar navbar-expand-lg navbar-text navbar-dark fixed-top shadow-lg">
        <a class="navbar-brand">
          <h1>Cestas Cooperflora</h1>
          <!-- <img src="assets/img/??.png" class="img-fluid" alt="Logo">  VAI COLOCAR ICONE ? -->
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado"
          aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- MENU DE EXPANSAO -->
        <div class="collapse navbar-collapse" id="conteudoNavbarSuportado">

          <ul class="navbar-nav ml-auto">

            <li class="nav-item">
              <a class="nav-link" href="entregas">
                <i class="fas fa-home"></i> Home
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="entregas">
                <i class="fas fa-heart"></i> Entregas
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="consumidores">
                <i class="fas fa-envelope"></i> Consumidores
                <!-- IDEA: ARMAZENAR DADOS NA FORMA DE JSON NO FIREBASE
                    RealTime Database: Grava como uma arvore JSON
                    Cloud Firestone: modelo orientado a documentos NoSql -->
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fas fa-users"></i> Sobre
              </a>
            </li>

          </ul>
        </div><!-- fim do menu expansao -->
      </nav> <!-- fim da barra de navegacao -->
    </header>

    <section>
      <!-- Como a variável erros é um vetor, caso exista retorno estamos iterando sob ela e trazendo os erros para a tela-->
      <% if(erros) {%>
        <ul>
          <% for(let i=0; i< erros.length; i++) { %>
            <li>
              <%= erros[i].msg %>
            </li>
            <% } %>
        </ul>
        <% } %>
    </section>

    <div class="container mt-5 pt-5">
      <form action="/entrega/salvar" method="post">
        <div class="mb-3">
          <label for="titulo" class="form-label">Titulo</label>
          <input type="text" class="form-control" name="titulo" value="<%= entrega.titulo %>">
        </div>
        <div class="mb-3">
          <label for="conteudoCesta" class="form-label">Conteúdo da Cesta</label>
          <input type="text" class="form-control" name="conteudoCesta" value="<%= entrega.conteudoCesta %>">
        </div>
        <div class="mb-3">
          <label for="dtaEntrega" class="form-label">Data da Entrega</label>
          <input type="datetime" class="form-control" name="dtaEntrega" value="<%= entrega.dtaEntrega %>">
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar Entrega</button>
      </form>
    </div>


  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
